<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:padding="5dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_yazaky" />


        <TextView
            android:id="@+id/status_scan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="No Scan" />

        <TextView
            android:id="@+id/ondata_rfid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="" />

        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/getdata_rfid"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="-10dp"
                android:layout_weight="10"
                android:text="" />

            <Button
                android:id="@+id/BtClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_bg"
                android:text="Clr"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_distance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:srcCompat="@drawable/ic_baseline_compare_arrows_24"/>
            <Spinner
                android:id="@+id/item_distance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </LinearLayout>

        <Button
            android:id="@+id/ondata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ondata" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_15"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="5dp"
        android:orientation="horizontal">


    </LinearLayout>


</LinearLayout>